{
  "description": "Automatic session time tracking",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/timelog.mjs\""
          },
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/set-env.sh\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/timelog.mjs\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/timelog.mjs\""
          }
        ]
      }
    ]
  }
}
